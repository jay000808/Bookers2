<!DOCTYPE html>
<html>
  <body>
    <div class="body">
      <div class="container">
        <div class="row">
          <div class="col-xs-3">
          <%= flash[:success] %>
          <%= flash[:notie] %>
          <%= flash[:update] %>
            <h2>User info</h2>
            <div class="row">                
              <%= attachment_image_tag current_user, :profile_image, format: "jpeg", size: "100x100", fallback: "no_image.jpg", class:"attachment user profile_image" %>
              <table class="table">
                <tbody>
                  <tr><tr>
                  <tr>
                    <th>name<th>
                    <th><%= current_user.name %><th>
                  <tr>
                    <th>introduction<th>
                    <th><%= current_user.introduction %></th>
                  <tr>
                </tbody>
              </table>
              <div class="row">            
                <%= link_to "", user_path(current_user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
              </div>

              <h2>New book</h2>
              <%= form_for(@book) do |f| %>
                <div class="field row">
                  <label>Title</label>
                  <%= f.text_field :title, class:"col-xs-12" %>
                </div>
                <div class="field row">
                  <label>Opinion</label>
                  <%= f.text_area :body, class:"col-xs-12" %>
                </div>
                <div class="actions row">
                  <%= f.submit "Create Book", class:"btn btn-primary col-xs-12" %>
                </div>
              <% end %>
            </div>
          </div>
          <div class="col-xs-9">
            <h2>Book detail</h2>
            <table class="table">
              <tbody>
                <tr>
                  <td>
                    <%= link_to user_path(@books.user.id) do %>
                      <%= attachment_image_tag @books.user, :profile_image, format: "jpeg", size: "40x40", fallback: "no_image.jpg", class:"attachment user profile_image fallback" %><br>
                      <%= @books.user.name %>
                    <% end %>
                  </td>
                  <td><%= @books.title %></td>
                  <td><%= @books.body %></td>
                  <% if @user.id == current_user.id %>
                    <td><%= link_to "Edit", edit_book_path, class:"btn-sm btn-success" %></td>
                    <td><%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn-sm btn-danger destroy_book_17746" %></td>
                  <% end %>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <footer>
        <div class="container">
  	        <div class="row">
    	        <div class="col-xs-3 col-xs-offset-9">
    		        <p>CopyRight Infratop.inc</p>
    	        </div>
            </div>
        </div>
    </footer>
  </body>
</html>
