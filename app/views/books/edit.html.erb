                        <%= f.submit "Update Book"%><br>
                        <%= link_to "Show",book_path(@book.id) %> |
                        <%= link_to "Back",books_path %> 
                    <% end %> 	
                </div>
            </div>
        </div>
        

        <footer>
            <div class="container">
  	            <div class="row">
    	            <div class="col-xs-3 col-xs-offset-9">
